{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2022",
        // "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "ES2022"
        ],
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "types": [
            "node"
        ],
        "typeRoots": [
            "types",
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}